{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Copy_file": {
                "inputs": {
                    "host": {
                        "connection": {
                            "name": "@parameters('$connections')['onedrive']['connectionId']"
                        }
                    },
                    "method": "post",
                    "path": "/datasets/default/files/@{encodeURIComponent(encodeURIComponent(triggerOutputs()['headers']['x-ms-file-id']))}/copy",
                    "queries": {
                        "destination": "/second-brain/second-brain/_fleeting-notes/@{body('Parse_JSON_-_Get_ExtractNotes_Response')?['extractedTitle']}.@{variables('imageFileExtension')}",
                        "overwrite": true
                    }
                },
                "runAfter": {
                    "Parse_JSON_-_Get_ExtractNotes_Response": [
                        "Succeeded"
                    ]
                },
                "type": "ApiConnection"
            },
            "Create_markdown_file": {
                "inputs": {
                    "body": "---\nnote-type: @{body('Parse_JSON_-_Get_ExtractNotes_Response')?['noteType']}\ncreated-date: @{formatDateTime(addToTime(utcNow(),8,'Hour'),'yyyy-MM-dd HH:mm')}\nlast-updated: @{formatDateTime(addToTime(utcNow(),8,'Hour'),'yyyy-MM-dd HH:mm')}\n---\n![[@{body('Parse_JSON_-_Get_ExtractNotes_Response')?['extractedTitle']}.@{variables('imageFileExtension')}]]\n\n@{body('Parse_JSON_-_Get_ExtractNotes_Response')?['extractedText']}",
                    "host": {
                        "connection": {
                            "name": "@parameters('$connections')['onedrive']['connectionId']"
                        }
                    },
                    "method": "post",
                    "path": "/datasets/default/files",
                    "queries": {
                        "folderPath": "/second-brain/second-brain/_fleeting-notes",
                        "name": "@{body('Parse_JSON_-_Get_ExtractNotes_Response')?['extractedTitle']}.md"
                    }
                },
                "runAfter": {
                    "Copy_file": [
                        "Succeeded"
                    ]
                },
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                },
                "type": "ApiConnection"
            },
            "Get_Functions_Secret": {
                "inputs": {
                    "host": {
                        "connection": {
                            "name": "@parameters('$connections')['keyvault']['connectionId']"
                        }
                    },
                    "method": "get",
                    "path": "/secrets/@{encodeURIComponent('razpython-defaulthostkey')}/value"
                },
                "runAfter": {
                    "Initialize_variable_-_imageFileExtension": [
                        "Succeeded"
                    ]
                },
                "runtimeConfiguration": {
                    "secureData": {
                        "properties": [
                            "outputs"
                        ]
                    }
                },
                "type": "ApiConnection"
            },
            "Get_file_metadata": {
                "inputs": {
                    "host": {
                        "connection": {
                            "name": "@parameters('$connections')['onedrive']['connectionId']"
                        }
                    },
                    "method": "get",
                    "path": "/datasets/default/files/@{encodeURIComponent(encodeURIComponent(triggerOutputs()['headers']['x-ms-file-id']))}"
                },
                "runAfter": {},
                "type": "ApiConnection"
            },
            "HTTP_-_Extract_Notes": {
                "inputs": {
                    "body": {
                        "$content-type": "multipart/form-data",
                        "$multipart": [
                            {
                                "body": "@triggerBody()",
                                "headers": {
                                    "Content-Disposition": "form-data; name=image; filename=\"@{triggerOutputs()['headers']['x-ms-file-name-encoded']}\"",
                                    "Content-Type": "@{triggerOutputs()['headers']['Content-Type']}"
                                }
                            }
                        ]
                    },
                    "method": "POST",
                    "uri": "https://razpython.azurewebsites.net/api/ExtractNotes?code=@{body('Get_Functions_Secret')?['value']}"
                },
                "runAfter": {
                    "Get_Functions_Secret": [
                        "Succeeded"
                    ]
                },
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                },
                "type": "Http"
            },
            "Initialize_variable_-_imageFileExtension": {
                "inputs": {
                    "variables": [
                        {
                            "name": "imageFileExtension",
                            "type": "string",
                            "value": "@{last(split(body('Get_file_metadata')?['Name'],'.'))}"
                        }
                    ]
                },
                "runAfter": {
                    "Get_file_metadata": [
                        "Succeeded"
                    ]
                },
                "type": "InitializeVariable"
            },
            "Parse_JSON_-_Get_ExtractNotes_Response": {
                "inputs": {
                    "content": "@body('HTTP_-_Extract_Notes')",
                    "schema": {
                        "properties": {
                            "extractedText": {
                                "type": "string"
                            },
                            "extractedTitle": {
                                "type": "string"
                            },
                            "noteType": {
                                "type": "string"
                            }
                        },
                        "type": "object"
                    }
                },
                "runAfter": {
                    "HTTP_-_Extract_Notes": [
                        "Succeeded"
                    ]
                },
                "type": "ParseJson"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "parameters": {
            "$connections": {
                "defaultValue": {},
                "type": "Object"
            }
        },
        "triggers": {
            "When_a_file_is_created": {
                "evaluatedRecurrence": {
                    "frequency": "Minute",
                    "interval": 1
                },
                "inputs": {
                    "host": {
                        "connection": {
                            "name": "@parameters('$connections')['onedrive']['connectionId']"
                        }
                    },
                    "method": "get",
                    "path": "/datasets/default/triggers/onnewfilev2",
                    "queries": {
                        "folderId": "A8546FE4B5BBEFDD!93368",
                        "includeSubfolders": true,
                        "inferContentType": true,
                        "simulate": false
                    }
                },
                "metadata": {
                    "6e202211-2856-4d17-9ded-5beb8b8626b0": "/",
                    "A8546FE4B5BBEFDD!93368": "/Handwritten Notes"
                },
                "recurrence": {
                    "frequency": "Minute",
                    "interval": 1
                },
                "type": "ApiConnection"
            }
        }
    },
    "parameters": {
        "$connections": {
            "value": {
                "keyvault": {
                    "connectionId": "/subscriptions/7308e0b7-489d-4f8b-80b7-832b0662d47d/resourceGroups/logicapps-rg/providers/Microsoft.Web/connections/keyvault",
                    "connectionName": "keyvault",
                    "connectionProperties": {
                        "authentication": {
                            "type": "ManagedServiceIdentity"
                        }
                    },
                    "id": "/subscriptions/7308e0b7-489d-4f8b-80b7-832b0662d47d/providers/Microsoft.Web/locations/southeastasia/managedApis/keyvault"
                },
                "onedrive": {
                    "connectionId": "/subscriptions/7308e0b7-489d-4f8b-80b7-832b0662d47d/resourceGroups/logicapps-rg/providers/Microsoft.Web/connections/onedrive",
                    "connectionName": "onedrive",
                    "id": "/subscriptions/7308e0b7-489d-4f8b-80b7-832b0662d47d/providers/Microsoft.Web/locations/southeastasia/managedApis/onedrive"
                }
            }
        }
    }
}